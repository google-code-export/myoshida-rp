
<% content_for :header_tags do %>
<%= stylesheet_link_tag 'redmine_info.css', :plugin => 'redmine_information' %>
<% end %>

<% form_tag({}, :method => 'get') do %>
<p>
	<label><%=l(:label_role)%>:</label>
	<%= select_tag 'role_id', options_from_collection_for_select(@roles, "id", "name", @role && @role.id) %>

  <label><%=l(:label_tracker)%>:</label>
	<%= select_tag 'tracker_id', options_from_collection_for_select(@trackers, "id", "name", @tracker && @tracker.id) %>
  
</p>
<p>
<%= submit_tag l(:button_view), :name => nil %>
</p>
<% end %>


<% if @tracker && @role && @statuses.any? %>

<%   if @workflows %>

<%=    render(:partial => 'info/flows_table',
              :locals => {:workflows => @workflows['always'], :sub_workflows => false}) %>

<%     for name in ['author', 'assignee'] %>

<h4><%= t('label_additional_workflow_transitions_for_' + name) %></h4>

<%       if (workflows_empty?(@statuses, @workflows[name])) %>
<p> <%= l(:label_no_data) %> </p>
<%        else %>
<%= render(:partial => 'info/flows_table',
           :locals => {:workflows => @workflows[name], :sub_workflows => @workflows['always']}) %>
<%       end %>
<%     end %>

<%   else %>
<%=    render(:partial => 'info/old_flows_table') %>
<%   end %>

<% end %>

